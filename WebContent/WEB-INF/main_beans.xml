<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- This enables Anotation wiring -->
	<context:annotation-config />
	
	<context:component-scan base-package="org.redhelp.resources" />
	<context:component-scan base-package="org.redhelp.factories" />
	<context:component-scan base-package="org.redhelp.bos" /> 
	
	<bean id="userAccountFactory" class="org.redhelp.factories.UserAccountFactory" />
	

	<!-- Stock Data Access Object -->
	<bean id="userAccountDao" class="org.redhelp.daos.UserAccountDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<!-- Database Configuration -->
	<import resource="DataSource.xml" />
	<import resource="Hibernate.xml" />

</beans> 